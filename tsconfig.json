{
  "compilerOptions": {
    "declaration": true,
    "stripInternal": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "module": "es2015",
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": true,
    "inlineSources": true,
    "target": "es5",
    "skipLibCheck": true,

    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,

    "lib": [
      "es2015",
      "dom"
    ]
  },
  "exclude": [
    "./src/**/*.spec.ts",
    "./src/**/*.e2e.ts",
    "./demo/**/*.*",
    "./config/**/*.*"
  ],
  "files": [
    "index.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "aot",
    "skipMetadataEmit" : true
  }
}